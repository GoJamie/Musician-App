<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:background="#2b4776"
        android:text="Events"
        android:textAlignment="center"
        android:textColor="#FFFCFAFA"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="376dp"
        android:layout_height="131dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="523dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/location_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:hint="Location"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_search" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/event_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Event Name"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tvDate4"
        android:layout_width="193dp"
        android:layout_height="43dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="460dp"
        android:hint="Event Date"
        android:text="Event Date"
        android:textAlignment="center"
        android:textColorHint="#FFFCFAFA"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <CheckBox
        android:id="@+id/private_checkbox"
        android:layout_width="160dp"
        android:layout_height="17dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="34dp"
        android:text="Private"
        app:layout_constraintEnd_toStartOf="@+id/tvDate4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <CheckBox
        android:id="@+id/own_event_checkbox"
        android:layout_width="160dp"
        android:layout_height="17dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="447dp"
        android:text="Own Events"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvDate4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/joined_event_checkbox" />

    <CheckBox
        android:id="@+id/joined_event_checkbox"
        android:layout_width="160dp"
        android:layout_height="17dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="34dp"
        android:text="Joined Events"
        app:layout_constraintEnd_toStartOf="@+id/tvDate4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/private_checkbox" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv"
        />
    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="440dp"
        android:layout_marginTop="7dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/own_event_checkbox">
        <!-- A CardView that contains a TextView -->
        <android.support.v7.widget.CardView
            android:id="@+id/event_card_1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:cardCornerRadius="4dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/event_name_1"
                    android:layout_width="344dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="147dp"
                    android:text="Public event for saxophone players"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/location_title"
                    android:layout_width="89dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="1dp"
                    android:text="Location:"
                    android:textAlignment="viewStart"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/event_name_1" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="295dp"
                    android:layout_height="37dp"
                    android:text="Oulu, Ouluhalli"
                    android:textAlignment="viewStart"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/location_title"
                    app:layout_constraintTop_toBottomOf="@+id/event_name_1" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="131dp"
                    android:layout_height="37dp"
                    android:layout_marginEnd="168dp"
                    android:text="12.3.2019"
                    android:textAlignment="viewStart"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/private_public"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/time_title"
                    app:layout_constraintTop_toBottomOf="@+id/location_title" />

                <TextView
                    android:id="@+id/time_title"
                    android:layout_width="89dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="25dp"
                    android:text="Time:"
                    android:textAlignment="viewStart"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/location_title" />

                <TextView
                    android:id="@+id/private_public"
                    android:layout_width="131dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="43dp"
                    android:layout_marginBottom="34dp"
                    android:text="Public event"
                    android:textAlignment="viewStart"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/participants_amount"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/time_title" />

                <TextView
                    android:id="@+id/participants_amount"
                    android:layout_width="203dp"
                    android:layout_height="37dp"
                    android:layout_marginEnd="11dp"
                    android:layout_marginBottom="34dp"
                    android:text="10 participants"
                    android:textAlignment="textEnd"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/time" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/event_card_2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:cardCornerRadius="4dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/event_name_2"
                    android:layout_width="344dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="30dp"
                    android:text="Private event for singers"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/location_title_2"
                    android:layout_width="89dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="1dp"
                    android:text="Location:"
                    android:textAlignment="viewStart"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/event_name_2" />

                <TextView
                    android:id="@+id/location_2"
                    android:layout_width="295dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp"
                    android:text="Oulu, Ouluhalli"
                    android:textAlignment="viewStart"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/location_title_2"
                    app:layout_constraintTop_toBottomOf="@+id/event_name_2" />

                <TextView
                    android:id="@+id/time_2"
                    android:layout_width="131dp"
                    android:layout_height="37dp"
                    android:layout_marginEnd="168dp"
                    android:text="12.3.2019"
                    android:textAlignment="viewStart"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/time_title_2"
                    app:layout_constraintTop_toBottomOf="@+id/location_2" />

                <TextView
                    android:id="@+id/time_title_2"
                    android:layout_width="89dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="1dp"
                    android:text="Time:"
                    android:textAlignment="viewStart"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/private_public_2"
                    app:layout_constraintEnd_toStartOf="@+id/time_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/location_title_2" />

                <TextView
                    android:id="@+id/private_public_2"
                    android:layout_width="131dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="43dp"
                    android:layout_marginBottom="33dp"
                    android:text="Private event"
                    android:textAlignment="viewStart"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/participants_amount_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/time_2" />

                <TextView
                    android:id="@+id/participants_amount_2"
                    android:layout_width="203dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="43dp"
                    android:layout_marginBottom="43dp"
                    android:text="10 participants"
                    android:textAlignment="textEnd"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/private_public_2"
                    app:layout_constraintTop_toBottomOf="@+id/time_2" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>